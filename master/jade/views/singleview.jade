h3
  // START Language list
  .pull-right
    .btn-group(uib-dropdown='', is-open='language.listIsOpen')
      button.btn.btn-default(type='button', uib-dropdown-toggle="")
        | {{language.selected}}
        span.caret
      ul.dropdown-menu.dropdown-menu-right.animated.fadeInUpShort(role='menu')
        li(ng-repeat='(localeId, langName) in language.available')
          a(ng-click='language.set(localeId, $event)') {{langName}}
  // END Language list

  | Single View
  small {{ 'dashboard.WELCOME' | translate:{ appName: app.name } }}  !

.col-lg-12.col-md-12.col-sm-12
    .panel.panel-default
        .panel-body
            form.form-horizontal(ng-submit="createStudent()")
                fieldset
                    legend Create a new student
                    .form-group
                        label.col-sm-2.control-label Name
                        .col-sm-10
                            input.form-control(type='text', placeholder='Student Name', required, ng-model='student.name')
                        label.col-sm-2.control-label Course
                        .col-sm-10
                            input.form-control(type='text', placeholder='Name of the Course for Student', required, ng-model='student.course')
                        label.col-sm-2.control-label Roll Number
                        .col-sm-10
                            input.form-control(type='text', placeholder='Roll Number', required, ng-model='student.rollnumber')

                fieldset
                    .form-group
                    .col-sm-4.col-sm-offset-2
                    button.mb-sm.btn.btn-danger(type='button', ui-sref="app.dashboard") Cancel
                    button.mb-sm.btn.btn-primary(type='submit') Create Student
